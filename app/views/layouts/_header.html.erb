<header class="header">

  <nav class="header-nav clearfix">

    <h1 class="header-logo">
      <a href="<%= root_url %>">Welp</a>
    </h1>

    <ul class="header-list clearfix">

      <% if logged_in? %>
        <li>
          <a href="<%= user_url(current_user) %>">
            <%= current_user.username %>
          </a>
        </li>
        <li>
          <%= link_to "Log out", session_url, { method: :delete } %>
        </li>
      <% else %>
        <li><a href="<%= new_session_url %>">Log in</a></li>
        <li><a href="<%= new_user_url %>">Sign up</a></li>
      <% end %>

    </ul>

  </nav>



</header>
