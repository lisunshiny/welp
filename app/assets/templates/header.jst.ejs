<h1 class="header-logo">
  <a href="#">Welp</a>
</h1>

<section class="search">
  <form class="search-form">
    <label for="search-text">Find</label>
    <input type="text" name="search[text]" id="search-text"></input>

    <label for="search-loc">Near</label>
    <input type="text" name="search[loc]" id="search-loc"></input>

    <button>Search!</button>
  </form>
</section>

<ul class="header-list clearfix">

  <% if (user.id) { %>
    <li>
      <a class="logged-in-nav" href="#/users/<%= user.id %>">
        <%= user.escape("username") %>
      </a>
    </li>
    <li>
      <a class="logged-in-nav" href="/session" data-method="delete">
        Log out
      </a>
    </li>
  <% } else { %>
    <li>
      <a class="logged-out-nav" href="/session/new">Log in</a>
    </li>
    <li>
      <a class="logged-out-nav" href="/users/new">Sign up</a>
    </li>
  <% } %>

</ul>
