
<% if (restaurant.isNew()) { %>
  <h2 class="restaurant-form-h2">Add a restaurant</h2>
<% } else { %>
  <h2 class="restaurant-form-h2">Edit <%= restaurant.escape("name") %></h2>
<% } %>


<section class="error-messages"></section>


<% if (!restaurant.isNew()) { %>
  <a class="delete-button" href="javascript:;">
    Delete restaurant
  </a>
<% } %>



<section class="restaurant-form-item clearfix">

  <label for="restaurant_name">Name</label>
  <input
    type="text"
    name="restaurant[name]"
    class="restaurant-item-input"
    value="<%= restaurant.escape("name") %>"
    id="restaurant_name">
</section>

<section class="restaurant-form-item clearfix">
  <label for="restaurant_tag">Tag</label>
  <select id="restaurant_tag" name="restaurant[tag]"     class="restaurant-item-input">
    <option
      value="0"
      <% if(restaurant.escape("tag") === "italian") { %>
        selected
      <% } %>>

      Italian
    </option>
    <option
      value="1"
      <% if(restaurant.escape("tag") === "chinese") { %>
        selected
      <% } %>>

      Chinese
    </option>
    <option
      value="2"
      <% if(restaurant.escape("tag") === "mexican") { %>
        selected
      <% } %>>

      Mexican
    </option>
    <option
      value="3"
      <% if(restaurant.escape("tag") === "american") { %>
        selected
      <% } %>>

      American
    </option>
    <option
      value="4"
      <% if(restaurant.escape("tag") === "indian") { %>
        selected
      <% } %>>

      Indian
    </option>
  </select>
</section>

<section class="restaurant-form-item clearfix">
  <label for="restaurant_address">Address</label>
  <input
    type="text"
    name="restaurant[address]"
    class="restaurant-item-input"
    value="<%= restaurant.escape("address1") %>"
    id="restaurant_address">
</section>

<section class="restaurant-form-item clearfix">

  <label for="restaurant_city">City</label>
  <input
    type="text"
    name="restaurant[city]"
    class="restaurant-item-input"
    value="<%= restaurant.escape("city") %>"
    id="restaurant_city">
</section>

<section class="restaurant-form-item clearfix">

  <label for="restaurant_state">State</label>
  <input
    type="text"
    name="restaurant[state]"
    class="restaurant-item-input"
    value="<%= restaurant.escape("state") %>"
    id="restaurant_state">
</section>

<section class="restaurant-form-item clearfix">

  <label for="restaurant_zip">Zip</label>
  <input
    type="text"
    name="restaurant[zip]"
    class="restaurant-item-input"
    value="<%= restaurant.escape("zip") %>"
    id="restaurant_zip">
</section>


<section class="restaurant-form-item clearfix">
  <label for="restaurant_phone">Phone</label>
  <input
    type="integer"
    name="restaurant[phone]"
    class="restaurant-item-input"
    value="<%= restaurant.escape("raw_phone") %>"
    id="restaurant_phone">
</section>

<section class="restaurant-form-item clearfix">
  <label for="input-restaurant-image">Pic</label>
    <input type="file" name="restaurant[pic]" id="input-restaurant-image"     class="restaurant-item-input">
</section>

<figure class="preview-restaurant-container">
  <img src="" class="preview-restaurant-pic">
</figure>

<button class="submit-restaurant">Submit!</button>
